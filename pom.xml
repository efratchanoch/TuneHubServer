    <groupId>com.example</groupId>
    <artifactId>TuneHub</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>TuneHub</name>
    <description>TuneHub</description>
    <url/>
    <licenses>
        <license/>
    </licenses>
    <developers>
        <developer/>
